virt-install \
-n CentOS -r 2048 --vcpus 2 --os-type=linux --os-variant=rhel6 \
--disk path=/var/lib/libvirt/images/CentOS_6.5_tienhai_062016.qcow2,format=qcow2,bus=virtio,cache=none \
--network bridge=br0,model=virtio \
--vnc --noautoconsole \
--import
 

