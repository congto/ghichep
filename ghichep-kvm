virt-install \
-n Ubuntu -r 2048 --vcpus 2 --os-type=linux --os-variant=ubuntuprecise \
--disk path=/var/kvm/images/ubuntu.img,format=qcow2,bus=virtio,cache=none \
-w network=default,model=virtio \
--vnc --noautoconsole \
-c /storage/local/iso/Ubuntu.iso


